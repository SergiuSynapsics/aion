<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="modP2pImpl">
    <property name="lib" value="../../lib" />
    <property name="src" value="./src" />
    <property name="src.build" value="./build/src" />
    <property name="test" value="./test" />
    <property name="test.build" value="./build/test" />
    <property name="test.report" value="./report" />

    <path id="cp">
        <pathelement location="${lib}/modP2p.jar"/>
    </path>

    <path id="cp.test">
        <pathelement location="${lib}/junit_4/junit-4.12.jar"/>
        <pathelement location="${lib}/hamcrest/hamcrest-core-1.3.jar"/>
        <pathelement location="${lib}/modP2p.jar"/>
        <pathelement location="${lib}/modP2pImpl.jar"/>
        <pathelement location="${test.build}"/>
    </path>

    <target name="clean">
        <delete dir="./build" includeEmptyDirs="true"/>
        <delete dir="${test.report}" includeEmptyDirs="true"/>
        <delete file="${lib}/modP2pImpl.jar"/>
    </target>

    <target name="build">
        <mkdir dir="${src.build}"/>
        <javac
                debug="true"
                debuglevel="source,lines,vars"
                includeAntRuntime="false"
                srcdir="${src}"
                destdir="${src.build}"
                includes="**/*.java,module-info.java"
                classpathref="cp"
        />
        <jar
                filesetmanifest="mergewithoutmain"
                basedir="${src.build}"
                destfile="${lib}/modP2pImpl.jar"
        />
    </target>

    <target name="test">
        <mkdir dir="${test.build}" />
        <mkdir dir="${test.report}" />
        <javac
                debug="on"
                debuglevel="source,lines,vars"
                includeantruntime="false"
                srcdir="${test}"
                destdir="${test.build}"
                includes="**/*Test.java"
                classpathref="cp.test"
        />
        <junit printsummary="on" haltonfailure="no" fork="true">
            <classpath refid="cp.test" />
            <formatter type="plain" usefile="false"/>
            <formatter type="xml" />
            <batchtest todir="${test.report}">
                <fileset dir="${test}" includes="**/*Test.java"/>
            </batchtest>
        </junit>
    </target>
</project>
